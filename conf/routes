# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.dbWakeUp
GET     /pokemones                  controllers.Application.index
POST    /add                        controllers.Application.addPokemon()
POST    /update/:id                 controllers.Application.updatePokemon(id: Int)
POST    /del/:id                    controllers.Application.deletePokemon(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    